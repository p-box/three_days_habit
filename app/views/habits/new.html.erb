<h1>Habits#new</h1>

<%= form_with url: habits_path , model: @habit, local: true do |f| %>
<%= render 'partial/errors_messages', model: f.object %>

<div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
<div>
<div class="field">
    <%= f.label :habit_image %><br />
    <%= f.file_field :habit_image, accept: 'image/png, image/jpeg, image/gif' %>
<div>

<p><%= f.submit "作成する" %> 
</p>

<% end %>